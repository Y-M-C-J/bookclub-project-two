<!-- Loop over each object in the projects array -->

<div class='flex justify-center'>
  <div>
    <form action='/search' method='GET' class='form search-form'>
      <div class='mt-1 flex rounded-md shadow-sm'>
        <input
          type='text'
          name='company-website'
          id='company-website'
          class='block w-full flex-1 rounded-none rounded-r-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'
          placeholder='Search...'
        />
        <button
          type='submit'
          class='ml-8 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700'
        >Search</button>
      </div>
    </form>
  </div>

  <div class='bg-white'>
    <div
      class='mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8'
    >
      <h2 class='sr-only'>Books</h2>

      <div
        class='grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8'
      >

        {{#each books as |book|}}
          <a href='/book/{{book.id}}' class='group'>
            <div class='w-full overflow-hidden rounded-lg'>
              <img
                src={{book.thumbnail}}
                alt='Book Cover'
                class='h-96 w-72 object-center group-hover:opacity-75'
              />
            </div>
            <h3 class='mt-4 text-sm text-gray-700'>{{book.author}}</h3>
            <p class='mt-1 text-lg font-medium text-gray-900'>{{book.name}}</p>
          </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>