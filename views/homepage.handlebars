<!-- Loop over each object in the projects array -->
{{#each books as |book| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      {{{get_emoji}}}
      <a href="/book/{{book.id}}">{{book.name}}, by {{book.author}}</a>
    </h2>
    <p>Recommended by {{book.user.name}} on {{format_date book.date_added}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{book.description}}
    </p>
  </div>
</div>
{{/each}}
