<form action="/search" method="GET" class="form search-form">
  <div class="form-group">
    <input class="form-input" type="text" name="q" placeholder="Search..." />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Search</button>
  </div>
</form>

<div class="bg-white">
  <div class="mx-auto max-w-2xl py-16 px-4 sm:py-24 sm:px-6 lg:max-w-7xl lg:px-8">
    <h2 class="sr-only">Books</h2>

 <div class="grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 xl:gap-x-8">
  
  {{#each books as |book| }}
<a href="/book/{{book.id}}" class="group">
        <div class="w-full overflow-hidden rounded-lg bg-gray-200">
          <img src={{book.thumbnail}} alt="Book Cover" class="h-96 w-72 object-center group-hover:opacity-75">
        </div>
        <h3 class="mt-4 text-sm text-gray-700">{{book.author}}</h3>
        <p class="mt-1 text-lg font-medium text-gray-900">{{book.name}}</p>
      </a>
      {{/each}}
  </div>
  </div>
  </div>
