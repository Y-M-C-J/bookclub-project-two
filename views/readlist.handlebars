<div class="py-5 text-primary">
    <h1 class="text-3xl font-semibold mb-7">Reading List</h1>

    {{!-- we check how many books we have if we have more than 1 then we want to render out the data --}}
    {{#if count}}

    <div class="flex flex-wrap gap-5">
        {{#each readList as |list|}}
        <a href="/book/{{list.book.id}}" class="mx-auto md:mx-0 w-fit">
            <div class="profile-book">
                <img src={{list.book.thumbnail}} alt="Book Cover"
                    class="hover:-translate-y-2 duration-200 w-[192px] h-[287px] mb-2 drop-shadow-xl">
                <p class="text-lg truncate max-w-[192px]">{{list.book.name}}</p>
            </div>
        </a>
        {{/each}}
    </div>


    {{!-- else we show the user that he have no books in the reading list --}}
    {{else}}
    <p>You have no books in the reading list, try add some from <a href="/">Here</a></p>
    {{/if}}
</div>