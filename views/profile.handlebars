<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Recommend a new book:</h3>

    <form class="form new-book-form">
      <div class="form-group">
        <label for="book-name">Book name:</label>
        <input class="form-input" type="text" id="book-name" name="book-name" />
      </div>
      <div class="form-group">
        <label for="book-author">Author:</label>
        <input class="form-input" type="text" id="book-author" name="book-author" />
      </div>
      <div class="form-group">
        <label for="book-desc">description:</label>
        <textarea class="form-input" id="book-desc" name="book-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

{{#if books.length}}
  <!-- This section is displayed only if books is a non-empty array -->
  <div id="current-books" class="col-md-6 project-list">
    <!-- Section header -->
    <h3>Current Books:</h3>

    {{#each books as |book|}}
      <!-- Iterate over each book in the books array -->
      <div class="row mb-2">
        <div class="col-md-8">
          <!-- Link to individual book details -->
          <h4><a href="/book/{{book.id}}">{{book.name}}</a></h4>
        </div>
        <div class="col-md-4">
          <!-- Delete button for each book -->
          <button class="btn btn-sm btn-danger" data-id="{{book.id}}">DELETE</button>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
</div>
<!-- End of parent row container -->


