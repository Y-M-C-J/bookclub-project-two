<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Share</title>
  {{!--
  <link rel="stylesheet" href="/css/jass.css"> --}}

  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" type="image/x-icon" href="/images/Bookshare.png" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="flex-column justify-space-around">
    <div class="border-b p-2">
      <header class="container mx-auto flex items-center justify-between">
        <h1>
          <a href="/"><img src="/images/Bookshare.png" alt="" class="max-w-[7rem]"></a>
        </h1>
        <div class="hidden space-x-10 lg:flex">
        <p class="text-base font-medium text-gray-500">Share and discuss books with your friends.</p>
        </div>
        <nav class="hidden lg:flex items-center space-x-3 text-primary">
          {{#if logged_in}}
          <a href="/profile" class="text-base font-medium text-gray-500 hover:text-gray-900">Add Books</a>
        <a href="/readlist" class="text-base font-medium text-gray-500 hover:text-gray-900">Reading List</a>
          <div class="">
            <button id="logout" class="inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700">Sign out</button>
          </div>
          {{else}}
              <div class="hidden items-center justify-end md:flex md:flex-1 lg:w-0">
       <a href="/login" class="ml-8 inline-flex items-center justify-center whitespace-nowrap rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-base font-medium text-white shadow-sm hover:bg-indigo-700">Sign in</a>
      </div>
          {{/if}}
        </nav>
        <button class="toggle-btn lg:hidden block" id="nav-toggler">
          <svg width="40px" height="40px" viewBox="0 0 48 48" version="1.1" xmlns="http://www.w3.org/2000/svg">
            <g>
              <line x1="0" y1="17" x2="48" y2="17" stroke-width="1" />
              <line x1="0" y1="31" x2="48" y2="31" stroke-width="1" />
            </g>

            <g>
              <line x1="0" y1="24" x2="48" y2="24" stroke-width="1" />
              <line x1="0" y1="24" x2="48" y2="24" stroke-width="1" />
            </g>
          </svg>
        </button>
      </header>
    </div>
    <main class="relative">
      <!-- Render the sub layout -->
      <div id="mobile-nav" style="z-index:-100"
        class="opacity-0 duration-500 fixed w-full h-full h-screen z-10 top-[75px] left-0 bg-[#f7f6f1]">
        <div class="container mx-auto py-10 px-5">
          <nav class="flex flex-col space-y-5 text-primary">
            {{#if logged_in}}
            <a class="text-2xl" href="/profile">Add Books</a>
            <a class="text-2xl" href="/readList">Reading List</a>
            <div class="border-b w-full"></div>
            <button onclick="logout()" class="text-2xl w-fit pt-10" id="logout">Logout</button>
            {{else}}
            <a class="text-2xl" href="/login">Login</a>
            {{/if}}
          </nav>
        </div>
      </div>
      <div class="container mx-auto px-2">
        {{{ body }}}
      </div>
    </main>
    <footer>

    </footer>
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
    <script src="/js/logout.js"></script>
  {{/if}}

  <script src='/lib/sweetalert2@11.js'></script>

  <script>
    const navToggler = document.getElementById('nav-toggler')
    const mobileNav = document.getElementById('mobile-nav')
    const button = document.querySelector('.toggle-btn');


    navToggler.addEventListener('click', () => {
      mobileNav.classList.toggle('opacity-0')
      mobileNav.style = `z-index: ${mobileNav.classList.contains('opacity-0') ? -100 : 100}`
      button.classList.toggle('-menu-open');
    })

  </script>
</body>

</html>